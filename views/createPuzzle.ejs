        <div class="container">

            <!-- Portfolio Item Heading -->
            <h1 class="my-4">Page Heading
                <small>Secondary Text</small>
            </h1>

            <!-- Portfolio Item Row -->
            <div class="row">

                <div class="col-md-8">
                    <div id="board" style="width:600px;"></div>
                </div>

                <div id="settings" class="col-md-4">

                    <h3 class="my-3">Project Description</h3>
                    <div class="row">
                        <div class="col-6 btn btn-primary active" v-on:click="changeToSetMode()">Position</div>
                        <div class="col-6 btn btn-primary"  v-on:click="backToSpareMode()">Variant </div>
                    </div>
                    <div class="row">
                        <label class="radio-inline col-3"><input type="radio" name="colorRadio" checked="true" /> white</label>
                        <label class="radio-inline col-3"><input type="radio" name="colorRadio"/> black </label>
                    </div>
                    <div class="row ">
                        <div class="checkbox col-4">
                            <label><input type="checkbox" checked="true" value=""/>white 0-0</label>
                        </div>
                        <div class="checkbox col-4">
                            <label><input type="checkbox" checked="true" value=""/>white 0-0-0</label>
                        </div>

                    </div>
                    <div class="row">
                        <div class="checkbox  col-4">
                            <label><input type="checkbox" checked="true"  value="" />black 0-0</label>
                        </div>
                        <div class="checkbox col-4">
                            <label><input type="checkbox"  checked="true"  value=""/>black 0-0-0</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="btn btn-danger col-12" v-on:click="engineAnalise()">Engine analise</div>
                    </div>
                    <div class="row">
                        <div  class="col">{{firstEngineLine}}</div>
                    </div>
                    <div class="row">
                        <div class="col">{{secondEngineLine}}</div>
                    </div>
                    <div class="row">
                        <div class="col">{{thirdEngineLine}}</div>
                    </div>
                    <ul>
                        <a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle">Toggle Menu</a>
                        <li>Lorem Ipsum</li>
                        <li>Dolor Sit Amet</li>
                        <li>Consectetur</li>
                        <li>Adipiscing Elit</li>
                    </ul>
                </div>

            </div>
            <!-- /.row -->


        </div>
        <script src="javascripts/libraries/jquery/jquery.min.js"></script>
        <script src="javascripts/libraries/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
        <script src="javascripts/libraries/chessBoardEvents.js"></script>
